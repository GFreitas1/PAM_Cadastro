<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuPesqueiro.Views.CadastroPage"
             Title="Cadastro">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Label Text="Crie sua conta"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="NomeEntry"
               Placeholder="Nome completo"
               TextColor="White"/>

        <Entry x:Name="EmailEntry"
               Placeholder="Email"
               Keyboard="Email"
               TextColor="White"/>

        <Entry x:Name="SenhaEntry"
               Placeholder="Senha"
               IsPassword="True"
               TextColor="White"/>

        <Button Text="Cadastrar"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnCadastroClicked"/>

    </VerticalStackLayout>
</ContentPage>
